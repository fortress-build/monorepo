    "input-otp": "^1.4.2",
    "lucide-react": "^0.473.0",
    "next-themes": "^0.4.4",
    "react": "19.0.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.54.2",
    "react-moveable": "^0.56.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "^2.15.0",
