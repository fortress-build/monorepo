{
  "name": "@repo/ui",
  "private": true,
  "version": "0.1.3",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "types": "src/index.tsx",
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./src/index.tsx"
    },
    "./postcss.config.mjs": "./postcss.config.mjs",
    "./styles/*": "./src/styles/*",
    "./components/*": {
      "types": [
        "./src/components/*.tsx",
        "./src/components/*.ts"
      ],
      "import": [
        "./src/components/*.tsx",
        "./src/components/*.ts"
      ]
    },
    "./components/ui/*": {
      "types": [
        "./src/components/ui/*.tsx",
        "./src/components/ui/*.ts"
      ],
      "import": [
        "./src/components/ui/*.tsx",
        "./src/components/ui/*.ts"
      ]
    },
    "./lib/*": {
      "types": [
        "./src/lib/*.ts",
        "./src/lib/*.tsx"
      ],
      "import": [
        "./src/lib/*.ts",
        "./src/lib/*.tsx"
      ]
    },
    "./hooks/*": {
      "types": [
        "./src/hooks/*.ts",
        "./src/hooks/*.tsx"
      ],
      "import": [
        "./src/hooks/*.ts",
        "./src/hooks/*.tsx"
      ]
    },
    "./providers/*": {
      "types": [
        "./src/providers/*.ts",
        "./src/providers/*.tsx"
      ],
      "import": [
        "./src/providers/*.ts",
        "./src/providers/*.tsx"
      ]
    }
  },
  "dependencies": {
