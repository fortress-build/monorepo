{
  "name": "@nerve-js/next",
  "private": false,
  "version": "0.1.8-rc.32",
  "type": "module",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo distrib node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "old-build-do-not-use-please": "pnpx tailwindcss -i ./src/input.css -o ./src/output.css",
    "build": "npx tailwindcss -i ./src/input.css -o ./distrib/output.css && tsc"
  },
  "files": [
    "distrib",
    "public"
  ],
  "main": "./distrib/index.cjs",
  "module": "./distrib/index.js",
  "types": "./distrib/index.d.ts",
  "exports": {
    ".": {
      "types": "./distrib/index.d.ts",
      "import": "./distrib/index.js",
      "require": "./distrib/index.cjs"
    },
    "./components/ui": {
      "types": "./distrib/components/ui/*.d.ts",
      "import": "./distrib/components/ui/*.js",
      "require": "./distrib/components/ui/*.cjs"
    }
  },
  "dependencies": {
    "@nerve-js/client": "workspace:*",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "19.0.6",
    "@types/react-dom": "19.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.471.2",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "@types/react": "19.0.6",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.0.0",
    "pkgroll": "^2.6.1",
    "postcss": "^8.5.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.10",
    "vite-plugin-dts": "^4.5.0"
  }
}
