    "@nerve-js/design-system": "workspace:*",
    "@nerve-js/next-config": "workspace:*",
    "@nerve-js/observability": "workspace:*",
    "@nerve-js/payments": "workspace:*",
    "@nerve-js/tokens": "workspace:*",
    "@nerve-js/healthlake": "workspace:*",
    "@sentry/nextjs": "^8.48.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "next": "15.1.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "svix": "^1.45.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nerve-js/typescript-config": "workspace:*",
    "@types/node": "22.10.5",
