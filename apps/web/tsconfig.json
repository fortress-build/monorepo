{
  "extends": [
    "@nerve-js/typescript-config/nextjs.json",
    "@nerve-js/cms/typescript-config.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@nerve-js/*": ["../../packages/*"]
    },
    "types": ["prismjs"]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
